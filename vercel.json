{
  "version": 2,
  "framework": "nextjs",
  "functions": {
    "app/api/**/route.ts": {
      "runtime": "edge"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "MOUNTAIN_AI_PROJECT": "life-goal-assistant"
  }
}
